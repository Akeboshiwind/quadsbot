FROM arm32v6/alpine as builder

# Install build deps
RUN apk add --no-cache \
    'cargo=1.39.0-r0' \
    'openssl-dev=1.1.1d-r3'

# Build app
WORKDIR /usr/src/myapp
COPY . .
RUN cargo build --release


FROM arm32v6/alpine

# Install runtime deps
RUN apk add --no-cache \
    'openssl-dev=1.1.1d-r3'

# Copy binary
COPY --from=builder /usr/src/myapp/target/release/quadsbot /quadsbot

CMD ["/quadsbot"]
